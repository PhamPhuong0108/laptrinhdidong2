<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imvDisk"
            android:layout_width="@dimen/sizeDics"
            android:layout_height="@dimen/sizeDics"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/mgTopDisc"
            android:background="@drawable/girl" />

        <TextView
            android:id="@+id/nameSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/mgBottomSing"
            android:text="All fall down"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalTime"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/sbSong"
            android:layout_marginEnd="13dp"
            android:text="00:00"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/timeCurrent"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/totalTime"
            android:layout_marginStart="16dp"
            android:text="00:00"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/sbSong"
            android:layout_width="@dimen/withSeekBar"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="120dp"
            android:progressBackgroundTint="#fff"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="397dp" />

        <Button
            android:id="@+id/btnFavourite"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="159dp"
            android:layout_marginStart="134dp"
            android:background="@drawable/favorite1" />

        <Button
            android:id="@+id/btnShare"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btnFavourite"
            android:layout_marginEnd="138dp"
            android:background="@drawable/share" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="38dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="109dp"
            android:background="@drawable/next" />

        <Button
            android:id="@+id/btnPre"
            android:layout_width="38dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btnNext"
            android:layout_marginStart="110dp"
            android:background="@drawable/previous" />

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="38dp"
            android:layout_height="33dp"
            android:layout_alignTop="@+id/btnNext"
            android:layout_centerHorizontal="true"
            android:background="@drawable/play" />

        <Button
            android:id="@+id/btnRepeat"
            android:layout_width="38dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btnNext"
            android:layout_marginEnd="46dp"
            android:background="@drawable/repeat" />

        <Button
            android:id="@+id/btnShuffle"
            android:layout_width="38dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btnNext"
            android:layout_marginStart="45dp"
            android:background="@drawable/shuffle" />


    </RelativeLayout>

</LinearLayout>