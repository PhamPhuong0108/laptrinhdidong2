<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_weight="9"
    tools:context="com.example.admin.mp3playyer.SplashActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:baselineAligned="true">

        <ImageView
            android:id="@+id/imgLogoGirl"
            android:layout_width="@dimen/sizeGirl"
            android:layout_height="@dimen/sizeGirl"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/girl"
           />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@color/colorBackgroundPlaylist">

        <ListView
            android:id="@+id/lvAllPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

        </ListView>
    </LinearLayout>


</LinearLayout>