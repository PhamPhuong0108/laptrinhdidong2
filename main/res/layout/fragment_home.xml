<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/musicPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/musicplayer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnHome"
                android:scaleType="fitXY"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="#0000"
                android:src="@drawable/allmusic" />

            <ImageButton
                android:id="@+id/btnPlaylist"
                android:scaleType="fitXY"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/btnHome"
                android:layout_marginLeft="20dp"
                android:src="@drawable/playlist"
                android:background="#0000"

                />

            <ImageButton
                android:id="@+id/btnSearch"
                android:scaleType="fitXY"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@drawable/search"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/btnHome"
                android:background="#0000"
                android:layout_alignLeft="@+id/btnHome"
                android:layout_marginRight="20dp"
                />
            <ImageButton
                android:id="@+id/btnFavourite"
                android:scaleType="fitXY"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/btnSearch"
                android:layout_below="@+id/btnPlaylist"
                android:layout_alignTop="@+id/btnSearch"
                android:src="@drawable/favourite"
                android:background="#0000"
                />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>